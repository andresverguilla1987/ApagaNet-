# === SMTP (elige UNA de dos opciones) ===============================
# Opción A: URL única (recomendado si tu proveedor la da)
# SMTP_URL="smtp://user:pass@smtp.mailgun.org:587?pool=true"
# SMTP_URL="smtps://user:pass@email-smtp.us-east-1.amazonaws.com:465"

# Opción B: variables discretas
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=postmaster@sandbox123.mailgun.org
SMTP_PASS=super-secret

# Opcionales
SMTP_FROM="ApagaNet <no-reply@tudominio.com>"
SMTP_REPLY_TO="soporte@tudominio.com"
SMTP_POOL_MAX=5
SMTP_POOL_MSG=100
SMTP_TLS_REJECT_UNAUTH=true

# === App secrets ===
TASK_SECRET=coloca_un_secreto
JWT_SECRET=cambia_esto
DATABASE_URL=postgres://user:pass@host:5432/dbname

# CORS (si no usas proxy /api en Netlify, agrega tu dominio completo)
CORS_ORIGINS=https://tu-sitio-netlify.app,http://localhost:5173
